{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Ubuntu; C/C++; g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-ggdb",
                "-pedantic-errors",
                "-Wall",
                "-Weffc++",
                "-Wextra",
                "-Wconversion",
                "-Wsign-conversion",
                "-std=c++23",
                "-I${fileDirname}/../include",
                "${fileDirname}/**.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Generated task for building C++ files."
        },
        {
            "type": "cppbuild",
            "label": "Windows; C/C++; g++.exe build active file",
